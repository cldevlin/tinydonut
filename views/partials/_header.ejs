<header class="page-header">
  <nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" href="/">TinyDonut</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <!-- shopping cart button -->

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/menu">Menu</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart"><i class="bi bi-cart4" id="cart-counter"> <%= session.cart ? session.cart.totalQty : ''; %> </i></a>
          </li>
        </ul>
      </div>
    </div>

    <div class="nav navbar-nav float-md-right flex-row">
      <% if (session.user) { %>
        <form class="form-inline" method="POST" action="/logout">
          <div style="margin-left: 1em;">
            Logged in as: <%= session.user.name %><button class="btn btn-outline-dark" type="submit"
                style=" margin-left: 1em;">Logout</button>
          </div>
        </form>
        <% } %>

    </div>



  </nav>

</header>
