<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Orders</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/myorder.css" type="text/css" />
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Varela&display=swap" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <!-- Bootstrap Icon -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

  <!-- External JS -->

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <% if (!status) { %>
      <div class="p-5 pb-md-4 mx-auto text-center">
        <div class="card text-center">
          <div class="card-header display-4 fw-normal">
            Order No.: <%= order_no %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <% if (true) { %>
                Your order will take <span id="waiting-time">
                  <%= waiting_time %>
                </span> minutes to prepare! <span class="time-ready"></span>
                <% }; %>
            </h5>
          </div>
          <div class="card-footer">
            <strong> <em> Pick up your order at 77 Reserve St, Tamworth</em></strong>
          </div>
        </div>
      </div>
      <% }; %>


        <div class="p-5 pb-md-4 mx-auto text-center">
          <h1 class="display-6 fw-normal">Order History</h1>
        </div>

        <section class="container">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Order Number</th>
                <th scope="col">Quantity</th>
                <th class="text-right" scope="col">Total</th>
                <th class="text-center" scope="col">Order Status</th>
                <th class="text-center" scope="col">Waiting Time</th>
                <th scope="col">Placed At</th>
              </tr>
            </thead>
            <tbody>
              <% for(const order of Object.values(data)) { %>
                <tr>
                  <td>
                    <%= order.order_no %>
                  </td>
                  <td>
                    <%= order.quantity %>
                  </td>
                  <td class="text-right">
                    <%= order.total %>
                  </td>
                  <td class="text-center">
                    <%= order.order_status %>
                  </td>
                  <td class="text-center">
                    <%= order.waiting_time %>
                  </td>
                  <td class="placedAt">
                    <%= order.placed_at.toLocaleDateString() %>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </section>






        <!-- Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
          integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
          crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
          integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
          crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
          integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
          crossorigin="anonymous"></script>
</body>

</html>
